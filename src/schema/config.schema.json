{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VAME Project Configuration",
  "type": "object",
  "properties": {
    "video_sets": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "readOnly": true
    },
    "egocentric_data": {
      "type": "boolean",
      "description": "Check this box if the input data is ALREADY egocentrically aligned"
    },
    "pose_confidence": {
      "type": "number",
      "description": "The confidence threshold for the data cleaning"
    },
    "iqr_factor": {
      "type": "number",
      "description": "Used for data cleaning before egocentric alignment"
    },
    "robust": {
      "type": "boolean",
      "description": "Used for data cleaning"
    },
    "n_clusters": {
      "type": "integer",
      "title": "Number of Clusters",
      "description": "The number of motifs"
    },
    "num_features": {
      "type": "integer",
      "description": "Please set to number of annotation points * 2"
    },
    "time_window": {
      "type": "integer",
      "description": "Please set to 1/2 of video fps. Value should be even, round up if needed"
    },
    "parameterization": {
      "type": "string"
    },
    "max_epochs": {
      "type": "integer"
    },
    "zdims": {
      "type": "integer",
      "description": "Dimensions of the latent space",
      "default": 30
    },
    "advanced_options": {
      "type": "object",
      "properties": {
        "savgol_filter": {
          "type": "boolean"
        },
        "savgol_length": {
          "type": "integer"
        },
        "savgol_order": {
          "type": "integer",
          "default": 2
        },
        "test_fraction": {
          "type": "number"
        },
        "pretrained_model": {
          "type": "string"
        },
        "pretrained_weights": {
          "type": "boolean"
        },
        "batch_size": {
          "type": "integer"
        },
        "model_snapshot": {
          "type": "integer"
        },
        "model_convergence": {
          "type": "integer"
        },
        "transition_function": {
          "type": "string"
        },
        "beta": {
          "type": "number"
        },
        "beta_norm": {
          "type": "boolean"
        },
        "learning_rate": {
          "type": "number"
        },
        "prediction_decoder": {
          "type": "integer"
        },
        "prediction_steps": {
          "type": "integer"
        },
        "noise": {
          "type": "boolean",
          "description": "Used for data cleaning"
        },
        "scheduler": {
          "type": "integer"
        },
        "scheduler_step_size": {
          "type": "integer"
        },
        "scheduler_gamma": {
          "type": "number"
        },
        "scheduler_threshold": {
          "type": "string"
        },
        "softplus": {
          "type": "boolean"
        },
        "hmm_trained": {
          "type": "boolean"
        },
        "load_data": {
          "type": "string"
        },
        "individual_parameterization": {
          "type": "boolean"
        },
        "random_state_kmeans": {
          "type": "integer"
        },
        "n_init_kmeans": {
          "type": "integer"
        },
        "length_of_motif_video": {
          "type": "integer"
        },
        "min_dist": {
          "type": "number"
        },
        "n_neighbors": {
          "type": "integer"
        },
        "random_state": {
          "type": "integer"
        },
        "num_points": {
          "type": "integer"
        },
        "hidden_size_layer_1": {
          "type": "integer"
        },
        "hidden_size_layer_2": {
          "type": "integer"
        },
        "dropout_encoder": {
          "type": "number"
        },
        "hidden_size_rec": {
          "type": "integer"
        },
        "dropout_rec": {
          "type": "number"
        },
        "n_layers": {
          "type": "integer"
        },
        "hidden_size_pred": {
          "type": "integer"
        },
        "dropout_pred": {
          "type": "number"
        },
        "mse_reconstruction_reduction": {
          "type": "string"
        },
        "mse_prediction_reduction": {
          "type": "string"
        },
        "kmeans_loss": {
          "type": "number"
        },
        "kmeans_lambda": {
          "type": "number"
        },
        "anneal_function": {
          "type": "string"
        },
        "kl_start": {
          "type": "number"
        },
        "annealtime": {
          "type": "number"
        },
        "legacy": {
          "type": "boolean"
        }
      },
      "required": []
    }
  },
  "required": [
    "video_sets",
    "egocentric_data",
    "pose_confidence",
    "iqr_factor",
    "robust",
    "n_clusters",
    "num_features",
    "time_window",
    "max_epochs",
    "zdims",
    "parameterization",
    "advanced_options"
  ]
}